# Home Assistant Screenshot Settings

# Connection settings
url: http://homeassistant.local:8123  # Your Home Assistant URL
username: your_username                # Your Home Assistant username
password: your_password               # Your Home Assistant password

# Connection timeout settings
timeout: 30     # Connection timeout in seconds
retry_count: 3  # Number of login retry attempts
retry_delay: 5  # Delay between retries in seconds

# Output settings
zoom: 1.0       # Zoom level (e.g., 0.8 for 80%)
width: 800      # Output width in pixels
height: 480     # Output height in pixels
scroll_offset: 0 # Number of pixels to crop from top (e.g., 30 to remove header)

# Image processing settings
contrast: 1.0    # Contrast adjustment (1.0 = normal, >1.0 = more contrast, <1.0 = less contrast)
brightness: 1.0  # Brightness adjustment (1.0 = normal, >1.0 = brighter, <1.0 = darker)
dither: "floyd-steinberg"  # Dithering algorithm to use (see --help for options)
invert: false    # Invert colors (black <-> white) 